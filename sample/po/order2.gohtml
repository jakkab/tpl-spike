<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hitachi ABB - PowerGrids - Work Order</title>
    
    <style>
    .workorder-box {
        max-width: 800px;
        margin: auto;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, .15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
    }
    
    .workorder-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
        
    }
    
    .workorder-box table td {
        padding: 5px;
        vertical-align: top;
    }
    
    .workorder-box table tr.information td:nth-child(2) {
        text-align: right;
    }
    
    .workorder-box table tr.top table td {
        padding-bottom: 20px;
    }
    
    .workorder-box table tr.top table td.title {
        font-size: 45px;
        line-height: 45px;
        color: #333;
    }
    
    .workorder-box table tr.information table td {
        /* padding-bottom: 40px; */
        font-size: small;
    }
    
    .workorder-box table tr.heading {
        border: 1px solid black;
    }
    .workorder-box table {
        border-collapse: collapse; 
    }

    .workorder-box table tr.heading td {
        background-color: #deebff;
        border: none;
    }
    
    .workorder-box table tr.details td {
        /* padding-bottom: 20px; */
        font-size: small;
    }

    .workorder-box table tr.summary td {
        /* padding-bottom: 20px; */
        font-weight: bold;
    }
    
    .workorder-box table tr.item td{
        border-bottom: 1px solid #eee;
    }
    
    .workorder-box table tr.item.last td {
        border-bottom: none;
    }
    
    .workorder-box table tr.total td:nth-child(2) {
        border-top: 2px solid #eee;
    }
    
    @media only screen and (max-width: 600px) {
        .workorder-box table tr.top table td {
            width: 100%;
            display: block;
            text-align: center;
        }
        
        .workorder-box table tr.information table td {
            width: 100%;
            display: block;
            text-align: center;
        }
    }

    .workorder-box .blue {
        background-color: #006bb6;
        color: white;
        font-size: x-large;
    }

    .workorder-box .light-blue {
        background-color: #deebff;
        color: black;
    }

    .imgRight {
        float:  right;
    }
    
    /** RTL **/
    .rtl {
        direction: rtl;
        font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }
    
    .rtl table {
        text-align: right;
    }
    
    .rtl table tr td:nth-child(2) {
        text-align: left;
    }

    .page-header, .page-header-space {
        height: 50px;
    }

    .page-footer, .page-footer-space {
        height: 50px;

    }

    .page-footer {
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .page-header {
        position: fixed;
        top: 0mm;
        width: 100%;
    }

    .page {
        page-break-before: always;
        page-break-after: always;
    }

    @page {
        @bottom-left {
            content: counter(page) "/" counter(pages);
        }
        margin: 20mm
    }

    /* custom config end */

    </style>
</head>

<body>
